<script src="{{ asset('bundles/admin/bower_components/Filterable-Multiple-Select-with-Checkboxes-fSelect/fSelect.js') }}"></script>

<script>

    $(function() {
		
        /*$('.select-one').fSelect({
			placeholder: 'Selectionner un élément',
			numDisplayed: 10,
			overflowText: '{n} selections',
			searchText: 'Recherche',
			showSearch: true
        });*/
		
		$('.select-one').multiselect({
			enableFiltering: true,
			filterPlaceholder: 'Rechercher un élément...',
			enableCaseInsensitiveFiltering: true,
			maxHeight: 400,
			buttonWidth: '400px',
			numberDisplayed: 5,
			buttonText: function(options, select) {
                if (options.length === 0) {
                    return 'Aucun élément selectionné';
                }
                else if (options.length > 5) {
                    return 'Plus de 5 éléments selectionnés !';
                }
                 else {
                     var labels = [];
                     options.each(function() {
                         if ($(this).attr('label') !== undefined) {
                             labels.push($(this).attr('label'));
                         }
                         else {
                             labels.push($(this).html());
                         }
                     });
                     return labels.join(', ') + '';
                 }
			},
		
		});
		
		$('.selectcat').multiselect({
			enableFiltering: true,
			filterPlaceholder: 'Rechercher une catégorie...',
			enableCaseInsensitiveFiltering: true,
			maxHeight: 300,
			dropUp: true,
			buttonWidth: '400px',
			numberDisplayed: 5,
			buttonText: function(options, select) {
                if (options.length === 0) {
                    return 'Aucun élément selectionné';
                }
                else if (options.length > 5) {
                    return 'Plus de 5 éléments selectionnés !';
                }
                 else {
                     var labels = [];
                     options.each(function() {
                         if ($(this).attr('label') !== undefined) {
                             labels.push($(this).attr('label'));
                         }
                         else {
                             labels.push($(this).html());
                         }
                     });
                     return labels.join(', ') + '';
                 }
			},
		});
		
		$('.selectkey').multiselect({
			enableFiltering: true,
			filterPlaceholder: 'Rechercher un mot clé...',
			enableCaseInsensitiveFiltering: true,
			maxHeight: 300,
			dropUp: true,
			buttonWidth: '400px',
			numberDisplayed: 5,
			buttonText: function(options, select) {
                if (options.length === 0) {
                    return 'Aucun élément selectionné';
                }
                else if (options.length > 5) {
                    return 'Plus de 5 éléments selectionnés !';
                }
                 else {
                     var labels = [];
                     options.each(function() {
                         if ($(this).attr('label') !== undefined) {
                             labels.push($(this).attr('label'));
                         }
                         else {
                             labels.push($(this).html());
                         }
                     });
                     return labels.join(', ') + '';
                 }
			},
		
		});
		
    });
	
</script>

</script>

{# Voici le script en question pour formatter les champs de mot de passe #}
<script type="text/javascript">
$(document).ready(function() {
var $container = $('div#passe');
for (var i = 0; i < $container.find(':input').length; i++){
if($container.find(':input')[i].type == 'password')
$($container.find(':input')[i]).attr('class','form-control');
}
});
</script>

